---
import Section from "@/components/Section.astro";
import { skills } from "@cv";
---

<Section>
    <section>
      <header>
        <h2 class="section-title">Habilidades</h2>
      </header>
  
      {skills.map(({ name, keywords }) => (
        <article class="supplement-entry">
          <h3>{name}:</h3>
          <ul class="flex flex-wrap gap-2">
            {keywords.map(keyword => (
              <li class="underline">
                <small>{keyword}</small>
              </li>
            ))}
          </ul>
        </article>
        <hr class="text-gray-300 my-1">
      ))}
    </section>
  </Section>
  

<style>
  @reference "tailwindcss";

  .section-title {
    @apply py-0.5 mb-2 text-white bg-[#223558] text-center font-semibold;
  }

  /* .supplement-entry {
    @apply mb-2;
  } */

  .supplement-entry header {
    @apply flex justify-between items-start gap-2 mb-1;
  }

  .supplement-entry h3 {
    font-weight: 500;
    color: #111;
  }

  .supplement-entry h4 {
    font-weight: 400;
    color: #222;
  }

  .supplement-entry a {
    color: #111;
  }

  .supplement-entry a:hover {
    text-decoration: underline;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }

  @media print {
    * {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }

    .section-title {
      background-color: #223558 !important;
      color: white !important;
    }

    h2, h3, h4 {
      color: black !important;
    }
  }
</style>
