---
import Section from "@/components/Section.astro";
import {work} from "@cv";
---

<Section >
    <article>
        <header>
            <h2 class="section-title">EXPERIENCIA</h2>
        </header>
        <footer>
            {
                work.map(({ name, institution, position, url, startDate, endDate, summary }) => {
                  const startYear = new Date(startDate).getFullYear();
                  const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actualidad";
          
                  return (
                    <section class="supplement-entry">
                      <header>
                        <div>
                            <h3>
                                <a 
                                    href={url} 
                                    title={`Ver ${institution}`} target="_blank"> {institution}
                                </a>
                            </h3>
                             <h4>{position}</h4>
                             <p>{summary}</p>
                        </div>
                        <div>
                          <time datetime={startDate} data-title={startDate}>{startYear}</time>
                        </div>
                      </header>
                    </section>
                  );
                })
              }
        </footer>
    </article>
</Section>

<style>
    @reference "tailwindcss";

    .section-title {
        @apply py-0.5 mb-2 text-white bg-[#223558] text-center font-semibold;
    }

    .supplement-entry {
    @apply mb-2;
  }

  .supplement-entry header {
    @apply flex justify-between items-start gap-2 mb-1;
  }

  .supplement-entry h3 {
    font-weight: 500;
    color: #111;
  }

  .supplement-entry h4 {
    font-weight: 400;
    color: #222;
  }

  .supplement-entry a {
    color: #111;
  }

  .supplement-entry p {
    color: #555;
  }

  .supplement-entry a:hover {
    text-decoration: underline;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }

      @media print {
    * {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }

    .section-title {
      background-color: #223558 !important;
      color: white !important;
    }

    h2, h3, h4 {
      color: #555 !important;
    }
  }
</style>
